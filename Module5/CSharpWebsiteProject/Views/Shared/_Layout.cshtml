<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSharpWebsiteProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSharpWebsiteProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">C# Website</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Index">My Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
            <div class="container text-center mt-5">
                <!-- Welcome Section -->
                <h1 class="display-4">Welcome to My ASP.NET Core MVC Project</h1>
                <p class="lead">
                    This project is built using <strong>ASP.NET Core MVC</strong>, a modern web development framework 
                    designed for building dynamic and scalable web applications.
                </p>

                <!-- What is ASP.NET Core MVC -->
                <div class="mt-5">
                    <h2>What is ASP.NET Core MVC?</h2>
                    <p class="text-muted">
                        ASP.NET Core MVC is a lightweight, open-source web framework developed by Microsoft. 
                        It follows the Model-View-Controller (MVC) architectural pattern, allowing for a clean 
                        separation of concerns and easy scalability.
                    </p>
                </div>

                <!-- Key Features Section -->
                <div class="mt-4 row justify-content-center">
                    <div class="col-md-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">🔹 Model-View-Controller (MVC)</h5>
                                <p class="card-text">
                                    Separates logic, UI, and data for better maintainability.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">🔹 Cross-Platform</h5>
                                <p class="card-text">
                                    Run your application on Windows, Linux, or macOS.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title">🔹 High Performance</h5>
                                <p class="card-text">
                                    Optimized for speed, with minimal memory usage.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Call to Action -->
                <div class="mt-5">
                    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="About">
                        Learn More About This Project
                    </a>
                </div>
            </div>
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>